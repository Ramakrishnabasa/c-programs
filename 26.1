#include <stdio.h>
void main()
{
    char str[10];
    gets(str);
    int i,c1=0,c2=0,c3=0;
    for(i=0; str[i]!='\0'; i++)
    {
        if(isupper(str[i]))
        {
            c1=c1+1;
        }
        else if(islower(str[i]))
        {
            c2=c2+1;
        }
        else if(isdigit(str[i]))
        {
            c3=c3+1;
        }
    }
    printf("\n count of upper characters:%d",c1);
    printf("\n count of lower characters:%d",c2);
    printf("\n count of digits:%d",c3);
}
